<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_natura_print_product_label_wizard_form" model="ir.ui.view">
        <field name="name">natura.print.product.label.wizard.form</field>
        <field name="model">natura.print.product.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Labels">
                <sheet>
                    <group>
                        <field name="template_id" required="1" domain="[('model_id.model', '=', 'product.template'), ('company_id', 'in', allowed_company_ids)]"/>
                        <field name="printer_id" required="1"/>
                    </group>
                    <group>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="qty"/>
                            </tree>
                        </field>
                    </group>
                    <field name="show_csv_button" invisible="1"/>
                    <field name="show_automation_button" invisible="1"/>
                </sheet>
                <footer>
                    <button name="action_open_csv_wizard" type="object" string="Print from CSV" class="btn-secondary"
                        invisible="not show_csv_button"/>
                    <button name="action_open_edit_wizard" type="object" string="Print with Edits" class="btn-secondary"
                        invisible="not show_csv_button"/>
                    <button name="action_open_label_automation_wizard" type="object" string="Label Automations"
                        class="btn-secondary" invisible="not show_automation_button"/>
                    <button name="action_send_labels" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_natura_print_product_label_wizard" model="ir.actions.act_window">
        <field name="name">Print Labels</field>
        <field name="res_model">natura.print.product.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
