<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_natura_print_lot_label_wizard_form" model="ir.ui.view">
        <field name="name">natura.print.lot.label.wizard.form</field>
        <field name="model">natura.print.lot.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Lot/Serial Labels">
                <sheet>
                    <group>
                        <field name="template_id" required="1"/>
                        <field name="printer_id" required="1"/>
                    </group>
                    <group>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="lot_id"/>
                                <field name="qty"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send_labels" type="object" string="Print" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_natura_print_lot_label_wizard" model="ir.actions.act_window">
        <field name="name">Print Lot/Serial Labels</field>
        <field name="res_model">natura.print.lot.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
