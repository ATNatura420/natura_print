<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_natura_print_test_wizard_form" model="ir.ui.view">
        <field name="name">natura.print.test.wizard.form</field>
        <field name="model">natura.print.test.wizard</field>
        <field name="arch" type="xml">
            <form string="Test Print">
                <sheet>
                    <group>
                        <field name="template_id" readonly="1" domain="[('company_id', 'in', allowed_company_ids)]"/>
                        <field name="printer_id" required="1"/>
                        <field name="qty" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send_test" type="object" string="Send Test" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_natura_print_test_print" model="ir.actions.act_window">
        <field name="name">Test Print</field>
        <field name="res_model">natura.print.test.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
