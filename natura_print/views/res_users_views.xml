<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_preferences_view_inherit_natura_print" model="ir.ui.view">
        <field name="name">res.users.preferences.form.inherit.natura_print</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Natura Print Settings">
                    <group>
                        <field name="natura_print_default_printer_id" options="{'no_create': True}"/>
                        <field name="natura_print_csv_encoding"/>
                        <field name="natura_print_csv_test_rows"/>
                    </group>
                    <group string="Default Templates">
                        <field name="natura_print_template_pref_ids">
                            <tree editable="bottom">
                                <field name="model_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="template_id" options="{'no_create': True, 'no_create_edit': True}" domain="[('model_id', '=', model_id), ('company_id', 'in', allowed_company_ids)]"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
