<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_natura_print_label_automation_tree" model="ir.ui.view">
        <field name="name">natura.print.label.automation.tree</field>
        <field name="model">natura.print.label.automation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
                <field name="model_id"/>
                <field name="webhook_url"/>
            </tree>
        </field>
    </record>

    <record id="view_natura_print_label_automation_form" model="ir.ui.view">
        <field name="name">natura.print.label.automation.form</field>
        <field name="model">natura.print.label.automation</field>
        <field name="arch" type="xml">
            <form string="Label Automation Rule">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Label Automation Rule"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active"/>
                        <field name="model_id" options="{'no_create': True}" domain="[('model', 'in', ('product.template', 'stock.lot', 'stock.quant', 'mrp.production'))]"/>
                        <field name="webhook_url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_natura_print_label_automation" model="ir.actions.act_window">
        <field name="name">Label Automation Rules</field>
        <field name="res_model">natura.print.label.automation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
